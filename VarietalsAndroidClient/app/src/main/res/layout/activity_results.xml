<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".activity.ResultsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8b0369"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Elena\n@VerietalsApp"
            android:textColor="#FFF"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8b0369"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/journal"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="JOURNAL"
            android:textColor="#FFF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/wines"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="WINES"
            android:textColor="#FFF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/stats"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="STATS"
            android:textColor="#c8c8c8"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/statsPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:text="Wines tasted"
            android:textColor="#b8b8b8"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/chartImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerInside" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="20dp"
            android:text="Favorite types"
            android:textColor="#b8b8b8"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/chartImage3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:paddingTop="20dp"
            android:text="Your top varietals (weighted percentage)"
            android:textColor="#b8b8b8"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/barChartImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/historyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/journalContent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="#FFF"

        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp" >

            <ImageView
                android:id="@+id/vineyard_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/im_landing_background" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="26dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="14dp"
            android:paddingRight="14dp"
            android:paddingTop="14dp">

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="March 1, 2015"
                android:textColor="#b8b8b8"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingBottom="5dp"
                android:text="Jamieson Ranch Vineyards"
                android:textColor="#000"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/wineRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >


            <ImageView
                android:id="@+id/glass1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/ic_full_glass" />

            <ImageView
                android:id="@+id/glass2"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/ic_full_glass" />

            <ImageView
                android:id="@+id/glass3"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/ic_half_glass" />

            <ImageView
                android:id="@+id/glass4"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/ic_empty_glass" />

            <ImageView
                android:id="@+id/glass5"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/ic_empty_glass" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="5"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg. Rating"
                    android:textColor="#b8b8b8"
                    android:textSize="13sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5"
                    android:textColor="#c7bc6c"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>