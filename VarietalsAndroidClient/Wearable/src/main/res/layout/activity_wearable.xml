<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:keepScreenOn="true"
    tools:context=".WearableActivity">

    <LinearLayout
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="0dp"
        android:paddingTop="25dp">

        <TextView
            android:id="@+id/prompt"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2010 Jamieson Ranch Vineyards, Coombsville, Cabernet Sauvignon"
            android:textColor="#585858"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_btn_search_go" />

    </LinearLayout>


    <ImageView
        android:id="@+id/recordVoiceNoteButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@drawable/ic_btn_speak_now" />

    <TextView
        android:id="@+id/speechResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#585858"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/wineRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/glass1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_full_glass" />

        <ImageView
            android:id="@+id/glass2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_full_glass" />

        <ImageView
            android:id="@+id/glass3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_half_glass" />

        <ImageView
            android:id="@+id/glass4"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_empty_glass" />

        <ImageView
            android:id="@+id/glass5"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_empty_glass" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="10dp"
        android:progress="50"
        android:thumb="@drawable/thumb" />


</LinearLayout>
